{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "pretty": true,
        "noEmit": false,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types", "./src/types"]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/**",
    ]
}